    "\n",
    "n = str(input('Nome do Jogador: '))\n",
    "g = str(input('Numero de Gols:'))\n",
    "if g.isnumeric():\n",
    "    g = int(g)\n",
    "else:\n",
    "    g=0\n",
    "if n.strip() == '':\n",
    "    ficha(gol = g)\n",
    "else:\n",
    "    ficha(n, g)"
